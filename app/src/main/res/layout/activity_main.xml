<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="import video" />

    <Button
        android:id="@+id/set_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="set start"
        app:layout_constraintLeft_toRightOf="@id/button" />

    <VideoView
        android:id="@+id/videoview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/start_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@id/set_start"
        app:layout_constraintLeft_toRightOf="@id/set_start"
        app:layout_constraintTop_toTopOf="@id/set_start" />

    <ImageView
        android:id="@+id/left_arrow"
        android:layout_width="@dimen/arrow_size"
        android:layout_height="@dimen/arrow_size"
        android:src="@drawable/ic_chevron_left_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/right_arrow"
        android:layout_width="@dimen/arrow_size"
        android:layout_height="@dimen/arrow_size"
        android:src="@drawable/ic_chevron_right_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/farzad_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="farzad"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/mehdi_save" />

    <Button
        android:id="@+id/mehdi_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mehdi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toRightOf="@id/farzad_save"
        app:layout_constraintRight_toLeftOf="@id/masoud_save" />

    <Button
        android:id="@+id/masoud_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="masoud"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toRightOf="@id/mehdi_save"
        app:layout_constraintRight_toLeftOf="@id/saman_save" />

    <Button
        android:id="@+id/saman_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="saman"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toRightOf="@id/masoud_save"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>